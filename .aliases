# Git Repos
function gg() {
  if [ $# -gt 0 ]; then
    for i in $(echo $*); do
      if [ -d ${i}/.git ]; then
        ( echo -e '\e[01;34m*** Pulling' ${i} '***\e[00m' && cd ${i} && git pull | grep -v "Already up-to-date." )
        ( cd ${i} && git cherry -v origin && git status -s )
      fi
    done
  else
    echo "usage: gg <git repo dir>"
  fi
}

function gs() {
  if [ $# -gt 0 ]; then
    for i in $(echo $*); do
      if [ -d ${i}/.git ]; then
        ( echo '***' ${i} && cd ${i} && git cherry -v origin && git status -s )
      fi
    done
  else
    echo "usage: gst <git repo dir>"
  fi
}

function gz() {
  if [ $# -gt 0 ]; then
    for i in $(echo $*); do
      if [ -d ${i} ]; then
        ( echo "*** Tarring into ~/sandbox/backups/ -- " ${i} " -- ***" && tar zcf ~/sandbox/backups/$(date +"%F").${i}.tgz ${i} )
      fi
    done
  else
    echo "usage: gz <dir name>"
  fi
}

