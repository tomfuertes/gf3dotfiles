# Git Repos
function gg() {
  if [ $# -gt 0 ]; then
    for i in $(echo $*); do
      if [ -d ${i}/.git ]; then
        ( echo '*** Pulling' ${i} && cd ${i} && git pull | grep -v "Already up-to-date." )
        ( cd ${i} && git cherry -v origin/master && git status -s )
      fi
    done
  else
    echo "usage: gg <git repo dir>"
  fi
}

function gs() {
  if [ $# -gt 0 ]; then
    for i in $(echo $*); do
      if [ -d ${i}/.git ]; then
        ( echo '***' ${i} && cd ${i} && git cherry -v origin/master && git status -s )
      fi
    done
  else
    echo "usage: gst <git repo dir>"
  fi
}

function gz() {
  if [ $# -gt 0 ]; then
    for i in $(echo $*); do
      if [ -d ${i} ]; then
        ( echo "*** Tarring into ~/Dropbox/backups/ -- " ${i} " -- ***" && tar zvcf ~/Dropbox/backups/$(date +"%F").${i}.tgz ${i} )
      fi
    done
  else
    echo "usage: gz <dir name>"
  fi
}

alias gupdot="cd ~/.dotfiles && git pull | grep -v 'Already up-to-date.' && cd - > /dev/null"
alias brup="brew update && brew upgrade"
alias gup="echo '*** Pulling git-repos/* ***'; gg ~/sandbox/git-repos/*; echo '*** Pulling ~/.dotfiles ***'; gupdot; echo '*** Brew Up ***'; brup"
alias gst="gs ~/sandbox/git-repos/*"
alias clean='find . -name "*.pyc" -delete; find . -name ".DS_Store" -delete'
alias smush='python ~/sandbox/git-repos/smush.py/smush/smush.py -r -s'

