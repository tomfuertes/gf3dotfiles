# Load things
if [ -f ~/.aliases ]; then
  source ~/.aliases
fi

if [ -f ~/.functions ]; then
  source ~/.functions
fi

# Adjust $PATH
if [ -d ~/.scripts ] ; then
  export PATH=$HOME/.scripts:$PATH
fi

# Misc settings
export EDITOR='subl -w'

# rbenv
if [ -d "$HOME/.rbenv/bin" ] ; then 
  export PATH="$HOME/.rbenv/bin":$PATH
  eval "$(rbenv init -)"
fi

