[user]
  name = Tom Fuertes
  email = stay@home-tom.com
[github]
  user = thisbetom
  token = TOKEN
[core]
  excludesfile = /Users/tomfuertes/.gitignore  
[alias]
  br = branch
  ci = commit
  co = checkout
  df = diff
  g = grep -I
  lg = log -p
  pb = publish-branch
  pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
  rb = rbranch
  rc = rank-contributors
  rv = review
  sm = show-merges
  st = status
  ksdiff = difftool -y -t Kaleidoscope
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[merge]
  log = true
[difftool "Kaleidoscope"]
  cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
